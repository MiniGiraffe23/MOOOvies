<%= form_for(:movie, url: movies_path, method: :get) do |f| %>
  <%= f.select :sort, options_for_select(['Most Watchlisted', 'Most Favorited', 'Highest Rated'], params[:sort]) %>
  <%= f.submit %>
<% end %>



<ul> <% @movies.each do |movie| %>
  <li><%= link_to image_tag(movie.poster_url), movie %></li>
  <p><%= link_to movie.title, movie %> (<%= movie.release_date.year %>)</p>
  <% end %>
</ul>
